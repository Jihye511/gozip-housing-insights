<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.local.repository.ReviewRepository">

    <!-- 리뷰 생성 SQL -->
    <insert id="createReview" parameterType="com.ssafy.local.dto.ReviewDto">
        INSERT INTO review (user_id, score, content, image_file, apt_id)
        VALUES (#{user_id}, #{score}, #{content}, #{image_file}, #{apt_id})
    </insert>

    <!-- 특정 아파트에 대한 모든 리뷰 조회 SQL -->
    <select id="getReviewsByAptId" resultType="com.ssafy.local.dto.ReviewDto">
        SELECT review_id, user_id, score, content, image_file, apt_id
        FROM review
        WHERE apt_id = #{aptId}
    </select>

    <!-- 리뷰 삭제 SQL -->
    <delete id="deleteReviewById" parameterType="int">
        DELETE FROM review WHERE review_id = #{reviewId}
    </delete>

</mapper>
